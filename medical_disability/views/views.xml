        </record>

        <record id="medical_patient_disability_assessment_tree" model="ir.ui.view">
            <field name="name">medical.patient.disability.assessment.tree</field>
            <field name="model">medical.patient.disability_assessment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient"/>
                    <field name="assessment_date"/>
                    <field name="cognitive_function"/>
                    <field name="visual_function"/>
                    <field name="hearing_function"/>
                    <field name="speech_function"/>
                    <field name="hand_function"/>
                    <field name="locomotor_function"/>
                    <field name="uxo"/>
                    <field name="assessment"/>
                </tree>
            </field>
        </record>

        <record id="medical_patient_disability_assessment_form" model="ir.ui.view">
            <field name="name">medical.patient.disability.assessment.form.view</field>
            <field name="model">medical.patient.disability_assessment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="patient"/>
                                <field name="assessment_date"/>
                            </group>
                            <group>
                                <field name="assessment"/>
                                <field name="professional"/>
                                <field name="user_id" invisible="1"/>
                                <field name="company_id" options="{'no_create': True}"
                                       groups="base.group_multi_company"/>
                            </group>
                        </group>
                         <group>
                            <group string="Summary - Brief Assessment">
                                <field name="cognitive_function"/>
                                <field name="visual_function"/>
                                <field name="hearing_function"/>
                                <field name="speech_function"/>
                                <field name="hand_function"/>
                                <field name="locomotor_function"/>
                                <field name="activity_participation"/>
                                 <newline/>
                                <field name="crutches"/>
                                <field name="wheelchair"/>
                                <field name="uxo"/>
                            </group>
                            <group string="Amputee Status">
                                <field name="amputee"/>
                                <field name="amputee_since"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Body functions">
                                <field name="body_functions">
                                    <tree editable="bottom">
                                        <field name="assessment"/>
                                        <field name="body_function"/>
                                        <field name="qualifier"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Body structures">
                                <field name="body_structures">
                                    <tree editable="bottom">
                                        <field name="assessment"/>
                                        <field name="body_structure"/>
                                        <field name="qualifier1"/>
                                        <field name="qualifier2"/>
                                        <field name="body_side"/>
                                    </tree>
                                </field>
                            </page>
                             <page string="Activities and Participation">
                                <field name="activity_and_participation">
                                    <tree editable="bottom">
                                        <field name="assessment"/>
                                        <field name="activity_and_participation"/>
                                        <field name="qualifier1"/>
                                        <field name="qualifier2"/>
                                    </tree>
                                </field>
                            </page>
                         </notebook>

                        <newline/>
                        <separator string="Extra Info"/>
                        <newline/>
                        <field name="notes" />
                    </sheet>
                </form>
            </field>
        </record>

